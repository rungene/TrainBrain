<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rungene.trainbrain.MainActivity">


    <Button
        android:id="@+id/buttonGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="@android:color/holo_green_light"
        android:onClick="start"
        android:text="Go!"
        android:textSize="30sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:text="30s"
        android:textSize="50sp"
        tools:background="@android:color/holo_orange_light" />

    <TextView
        android:id="@+id/textViewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_orange_dark"
        android:padding="10dp"
        android:text="0/0"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/textViewAddition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewTimer"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="31+12"
        android:textSize="30sp"
        tools:textColor="@android:color/black" />


    <Button
        android:id="@+id/buttonOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTimer"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:onClick="chooseAnswer"
        android:background="@android:color/holo_blue_dark"
        android:padding="30dp"
        android:tag="0"
        android:text="3"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="0"
        app:layout_rowWeight="1" />
    <Button
        android:id="@+id/buttonTwo"
        android:layout_toRightOf="@id/buttonOne"
        android:layout_below="@id/textViewAddition"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_row="0"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_gravity="fill"
        android:text="3"
        android:tag="1"
        android:padding="30dp"
        android:layout_marginRight="10dp"
        android:onClick="chooseAnswer"
        android:background="@android:color/holo_blue_dark"
        />
    <Button
        android:id="@+id/buttonThree"
        android:layout_toRightOf="@id/buttonTwo"
        android:layout_below="@id/textViewScore"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_row="0"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_gravity="fill"
        android:text="3"
        android:tag="2"
        android:padding="30dp"
        android:layout_marginLeft="10dp"
        android:onClick="chooseAnswer"
        android:background="@android:color/holo_blue_dark"
        />


    <Button
        android:id="@+id/buttonFour"
        android:layout_marginTop="20dp"
        android:layout_below="@id/buttonOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_row="0"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_gravity="fill"
        android:text="3"
        android:tag="3"
        android:padding="30dp"
        android:layout_marginRight="10dp"
        android:onClick="chooseAnswer"
        android:background="@android:color/holo_blue_dark"
        />
    <Button
        android:id="@+id/buttonFive"
        android:layout_toRightOf="@id/buttonFour"
        android:layout_below="@id/buttonTwo"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_row="0"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_gravity="fill"
        android:text="3"
        android:tag="4"
        android:padding="30dp"
        android:layout_marginRight="10dp"
        android:onClick="chooseAnswer"
        android:background="@android:color/holo_blue_dark"
        />
    <Button
        android:id="@+id/buttonSix"
        android:layout_toRightOf="@id/buttonFive"
        android:layout_below="@id/buttonThree"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_row="0"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_gravity="fill"
        android:text="3"
        android:tag="5"
        android:padding="30dp"
        android:layout_marginLeft="10dp"
        android:onClick="chooseAnswer"
        android:background="@android:color/holo_blue_dark"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:text="Correct!"
        android:textSize="40sp" />


</RelativeLayout>
